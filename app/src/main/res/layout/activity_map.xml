<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".map.MapActivity">

    <fragment
        android:id="@+id/map_main"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".map.MapActivity"
        android:name="com.google.android.gms.maps.SupportMapFragment" />
    
    <ImageView
        android:id="@+id/map_current_location_btn"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:src="@drawable/current_location_btn"
        android:layout_marginStart="20dp"
        android:layout_marginBottom="30dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintBottom_toTopOf="@id/map_carpool_btn"/>

    <ImageView
        android:id="@+id/map_mypage_btn"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:src="@drawable/mypage_btn"
        android:layout_marginEnd="20dp"
        android:layout_marginBottom="8dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toTopOf="@id/map_chatting_btn"/>

    <ImageView
        android:id="@+id/map_chatting_btn"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:src="@drawable/chatting_btn"
        android:layout_marginEnd="20dp"
        android:layout_marginBottom="30dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toTopOf="@id/map_carpool_btn"/>

    <LinearLayout
        android:id="@+id/map_carpool_btn"
        android:layout_width="match_parent"
        android:layout_height="63dp"
        android:background="@drawable/carpool_btn_background"
        android:clickable="true"
        android:focusable="true"
        android:gravity="center"
        android:orientation="horizontal"
        app:layout_constraintBottom_toBottomOf="parent"
        tools:layout_editor_absoluteX="0dp">

        <ImageView
            android:id="@+id/map_carpool_logo"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:layout_marginEnd="5dp"
            android:src="@drawable/bottom_car_logo"
            app:layout_constraintEnd_toStartOf="@id/map_carpool_text" />

        <TextView
            android:id="@+id/map_carpool_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:text="카풀하기"
            android:textColor="@android:color/white"
            android:textFontWeight="500"
            android:textSize="20dp"
            app:layout_constraintStart_toEndOf="@id/map_carpool_logo" />
    </LinearLayout>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/map_location_rv"
        android:layout_width="match_parent"
        android:layout_height="483dp"
        android:paddingTop="50dp"
        tools:listitem="@layout/item_location"
        android:visibility="gone"
        android:background="@drawable/slide_pannel_background"
        app:layout_constraintBottom_toTopOf="@id/map_carpool_btn"/>

    <ImageView
        android:id="@+id/map_location_pannel_line_iv"
        android:layout_width="79dp"
        android:layout_height="5dp"
        android:src="@drawable/pannel_line"
        android:visibility="gone"
        android:layout_marginTop="10dp"
        app:layout_constraintTop_toTopOf="@id/map_location_rv"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/map_setting_time_lo"
        android:layout_width="287dp"
        android:layout_height="408dp"
        android:orientation="vertical"
        android:layout_marginTop="20dp"
        android:background="@drawable/dialog_layout_background"
        android:visibility="gone"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="지금타기"
            android:textColor="@color/smupool_blue"
            android:textSize="13sp"
            android:textFontWeight="500"
            android:layout_marginEnd="20dp"
            android:layout_marginTop="17dp"
            app:layout_constraintTop_toTopOf="@id/map_setting_time_lo"
            app:layout_constraintEnd_toEndOf="@id/map_setting_time_lo"/>

        <ImageView
            android:id="@+id/map_setting_time_line_iv"
            android:layout_width="287dp"
            android:layout_height="0dp"
            android:src="@drawable/line"
            android:layout_marginTop="50dp"
            app:layout_constraintTop_toTopOf="@id/map_setting_time_lo"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"/>

        <TextView
            android:id="@+id/map_setting_time_title_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="탑승시간 선택"
            android:textColor="@color/smupool_navy"
            android:textSize="16sp"
            android:textFontWeight="600"
            android:layout_marginTop="20dp"
            app:layout_constraintTop_toTopOf="@id/map_setting_time_line_iv"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"/>

        <TextView
            android:id="@+id/map_setting_time_date_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="2024년 04월 27일 (토)"
            android:textColor="@color/smupool_navy"
            android:textSize="13sp"
            android:textFontWeight="200"
            android:layout_marginTop="15dp"
            app:layout_constraintTop_toBottomOf="@id/map_setting_time_title_tv"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"/>

        <ImageView
            android:id="@+id/map_setting_time_line2_iv"
            android:layout_width="287dp"
            android:layout_height="0dp"
            android:src="@drawable/line"
            android:layout_marginTop="20dp"
            app:layout_constraintTop_toBottomOf="@id/map_setting_time_date_tv"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"/>

        <TimePicker
            android:id="@+id/map_setting_time_picker_tp"
            android:layout_width="wrap_content"
            android:layout_height="160dp"
            android:timePickerMode="spinner"
            android:theme="@style/InfoTimePickerTheme"
            android:layout_marginTop="20dp"
            app:layout_constraintTop_toTopOf="@id/map_setting_time_line2_iv"
            app:layout_constraintStart_toStartOf="@id/map_setting_time_lo"
            app:layout_constraintEnd_toEndOf="@id/map_setting_time_lo"/>

        <ImageView
            android:id="@+id/map_setting_time_line3_iv"
            android:layout_width="287dp"
            android:layout_height="0dp"
            android:src="@drawable/line"
            android:layout_marginTop="50dp"
            app:layout_constraintBottom_toTopOf="@id/map_setting_time_btn"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"/>

        <Button
            android:id="@+id/map_setting_time_btn"
            android:layout_width="140dp"
            android:layout_height="60dp"
            android:backgroundTint="@color/white"
            android:textColor="@color/smupool_blue"
            android:textSize="13sp"
            android:textFontWeight="500"
            android:text="선택"
            app:layout_constraintBottom_toBottomOf="@id/map_setting_time_lo"
            app:layout_constraintStart_toEndOf="@id/map_setting_time_cancel_btn"
            app:layout_constraintEnd_toEndOf="@id/map_setting_time_lo" />

        <View
            android:id="@+id/divider"
            android:layout_width="2dp"
            android:layout_height="60dp"
            android:background="@color/smupool_white"
            app:layout_constraintTop_toTopOf="@id/map_setting_time_cancel_btn"
            app:layout_constraintBottom_toBottomOf="@id/map_setting_time_cancel_btn"
            app:layout_constraintStart_toEndOf="@id/map_setting_time_cancel_btn"
            app:layout_constraintEnd_toStartOf="@id/map_setting_time_btn"/>

        <Button
            android:id="@+id/map_setting_time_cancel_btn"
            android:layout_width="140dp"
            android:layout_height="60dp"
            android:backgroundTint="@color/white"
            android:textColor="@color/smupool_navy"
            android:textSize="13sp"
            android:textFontWeight="500"
            android:text="닫기"
            app:layout_constraintBottom_toBottomOf="@id/map_setting_time_lo"
            app:layout_constraintEnd_toStartOf="@id/map_setting_time_btn"
            app:layout_constraintStart_toStartOf="@id/map_setting_time_lo" />

    </androidx.constraintlayout.widget.ConstraintLayout>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/map_select_people_rv"
        android:layout_width="match_parent"
        android:layout_height="312dp"
        android:paddingTop="50dp"
        tools:listitem="@layout/item_people"
        android:background="@drawable/slide_pannel_background"
        android:visibility="gone"
        app:layout_constraintBottom_toTopOf="@id/map_carpool_btn"/>
    <ImageView
        android:id="@+id/map_people_pannel_line_iv"
        android:layout_width="79dp"
        android:layout_height="5dp"
        android:src="@drawable/pannel_line"
        android:visibility="gone"
        android:layout_marginTop="10dp"
        app:layout_constraintTop_toTopOf="@id/map_select_people_rv"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/map_carpool_matching_lo"
        android:layout_width="288dp"
        android:layout_height="260dp"
        android:layout_marginTop="20dp"
        android:background="@drawable/dialog_layout_background"
        android:orientation="vertical"
        android:visibility="gone"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <TextView
            android:id="@+id/map_carpool_matching_title_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="20dp"
            android:layout_marginTop="20dp"
            android:text="매칭 중입니다"
            android:textColor="@color/smupool_navy"
            android:textFontWeight="500"
            android:textSize="15sp"
            app:layout_constraintStart_toStartOf="@id/map_carpool_matching_lo"
            app:layout_constraintTop_toTopOf="@id/map_carpool_matching_lo" />

        <TextView
            android:id="@+id/map_carpool_matching_cancel_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:layout_marginEnd="20dp"
            android:text="취소"
            android:textColor="@color/smupool_gray"
            android:textFontWeight="500"
            android:textSize="13sp"
            app:layout_constraintEnd_toEndOf="@id/map_carpool_matching_lo"
            app:layout_constraintTop_toTopOf="@id/map_carpool_matching_lo" />

        <TextView
            android:id="@+id/map_carpool_matching_num_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="70dp"
            android:layout_marginEnd="5dp"
            android:text="2"
            android:textColor="@color/smupool_blue"
            android:textFontWeight="600"
            android:textSize="40sp"
            app:layout_constraintEnd_toStartOf="@id/map_carpool_matching_num_simbol_tv"
            app:layout_constraintTop_toTopOf="@id/map_carpool_matching_title_tv" />

        <TextView
            android:id="@+id/map_carpool_matching_num_simbol_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="70dp"
            android:text="/"
            android:textColor="@color/smupool_blue"
            android:textFontWeight="600"
            android:textSize="40sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="@id/map_carpool_matching_title_tv" />

        <TextView
            android:id="@+id/map_carpool_matching_select_num_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="5dp"
            android:layout_marginTop="70dp"
            android:text="N"
            android:textColor="@color/smupool_blue"
            android:textFontWeight="600"
            android:textSize="40sp"
            app:layout_constraintStart_toEndOf="@id/map_carpool_matching_num_simbol_tv"
            app:layout_constraintTop_toTopOf="@id/map_carpool_matching_title_tv" />

        <ImageView
            android:id="@+id/map_carpool_matching_line_iv"
            android:layout_width="288dp"
            android:layout_height="0dp"
            android:layout_marginBottom="60dp"
            android:src="@drawable/line"
            app:layout_constraintBottom_toBottomOf="@id/map_carpool_matching_lo"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent" />

        <Button
            android:id="@+id/map_carpool_current_matching_btn"
            android:layout_width="280dp"
            android:layout_height="60dp"
            android:backgroundTint="@color/white"
            android:text="현재 인원 매칭 요청"
            android:textColor="@color/smupool_blue"
            android:textFontWeight="500"
            android:textSize="13sp"
            app:layout_constraintBottom_toBottomOf="@id/map_carpool_matching_lo"
            app:layout_constraintEnd_toEndOf="@id/map_carpool_matching_lo"
            app:layout_constraintStart_toStartOf="@id/map_carpool_matching_lo" />
    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.constraintlayout.widget.ConstraintLayout>