<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="287dp"
    android:layout_height="167dp"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@drawable/dialog_layout_background">

    <TextView
        android:id="@+id/current_match_title_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text="매칭을 멈추고 현재 인원으로 \n택시를 타시겠습니까? (        "
        android:textColor="@color/smupool_blue"
        android:textSize="15sp"
        android:textFontWeight="200"
        android:layout_marginTop="30dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>

    <TextView
        android:id="@+id/current_match_num_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:textColor="@color/smupool_blue"
        android:textSize="15sp"
        android:textFontWeight="200"
        android:text="n"
        android:layout_marginEnd="24dp"
        app:layout_constraintEnd_toEndOf="@id/current_match_title_tv"
        app:layout_constraintBottom_toBottomOf="@id/current_match_title_tv"/>
    <TextView
        android:id="@+id/right_bracket_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:textColor="@color/smupool_blue"
        android:textSize="15sp"
        android:textFontWeight="200"
        android:text="명)"
        app:layout_constraintStart_toEndOf="@id/current_match_num_tv"
        app:layout_constraintBottom_toBottomOf="@id/current_match_title_tv"/>

    <ImageView
        android:id="@+id/current_match_line_iv"
        android:layout_width="287dp"
        android:layout_height="0dp"
        android:layout_marginBottom="60dp"
        android:src="@drawable/line"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <Button
        android:id="@+id/current_match_yes_btn"
        android:layout_width="140dp"
        android:layout_height="60dp"
        android:backgroundTint="@color/white"
        android:textColor="@color/smupool_blue"
        android:textSize="13sp"
        android:textFontWeight="500"
        android:text="YES"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toStartOf="@id/current_match_no_btn"/>

    <View
        android:id="@+id/divider"
        android:layout_width="2dp"
        android:layout_height="60dp"
        android:background="@color/smupool_white"
        app:layout_constraintTop_toTopOf="@id/current_match_yes_btn"
        app:layout_constraintBottom_toBottomOf="@id/current_match_yes_btn"
        app:layout_constraintStart_toEndOf="@id/current_match_yes_btn"
        app:layout_constraintEnd_toStartOf="@id/current_match_no_btn"/>

    <Button
        android:id="@+id/current_match_no_btn"
        android:layout_width="140dp"
        android:layout_height="60dp"
        android:backgroundTint="@color/white"
        android:textColor="@color/smupool_navy"
        android:textSize="13sp"
        android:textFontWeight="200"
        android:text="NO"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toEndOf="@id/current_match_yes_btn"
        app:layout_constraintEnd_toEndOf="parent"/>

</androidx.constraintlayout.widget.ConstraintLayout>