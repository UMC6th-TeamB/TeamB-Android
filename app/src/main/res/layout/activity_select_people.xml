<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/map_select_people_rv"
        android:layout_width="match_parent"
        android:layout_height="312dp"
        android:paddingTop="50dp"
        tools:listitem="@layout/item_people"
        android:background="@drawable/slide_pannel_background"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>

    <ImageView
        android:id="@+id/map_people_pannel_line_iv"
        android:layout_width="79dp"
        android:layout_height="5dp"
        android:src="@drawable/pannel_line"
        android:layout_marginTop="10dp"
        app:layout_constraintTop_toTopOf="@id/map_select_people_rv"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

</androidx.constraintlayout.widget.ConstraintLayout>